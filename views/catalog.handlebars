<body style="text-align: center;">
    <br>
    <div class="container">
        <div style="background-color:lightslategray"class="jumbotron jumbotron-fluid">
            <h1 class="animated fadeInDown" style="font-family: 'Abril Fatface', cursive; text-align: center;"
                id="title" class="display-4">PETRIFIED</h1>
            <br>
            <i id="anicon" style="font-size: 50px; padding: 2px;" class="fas fa-cat"></i> <i
                style="font-size: 50px; padding: 2px;" id="anicon" class="fas fa-spider"></i> <i
                style="font-size: 50px; padding: 2px;" id="anicon" class="fas fa-dog fa-flip-horizontal"></i>
            <h2 class="animated fadeInDown" style="font-family: 'Abril Fatface', cursive; text-align: center;"> Welcome
                To Our Catalogue</h2>
            <br>
            <hr>
            <button  type="button" class="btn btn-dark">
                Show Lost Animals Only </button>

            <button type="button" class="btn btn-dark">
                Show Found Animals Only
            </button>
            <a style="background-color:tomato;"class="btn btn-dark" href="/lostfound/" role="button">
                <i class="fas fa-home"></i>
            </a>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card lg-12" style="max-width: 100%;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{this.img}}" class="card-img" alt="petPic">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="container">
                                    <div class="row">
                                        {{#each animal}}
                                        {{#if lost}}
                                        <div class="col-sm-4">
                                            <div class="row">Type:{{this.type}}</div>
                                            <div class="row">Name:{{this.name}}</div>
                                            <div class="row">Color:{{this.color}}</div>
                                            <div class="row">Size:{{this.size}}</div>
                                        </div>
                                        {{!-- {{/each}} --}}
                                        {{!-- {{#each animal}} --}}
                                        <div class="col-xs-8">
                                            <div class="row">Description:{{this.description}}</div>
                                            <div class="row">Last Seen:{{this.lastSeen}}</div>
                                            <div class="row">Contact:{{this.contactInfo}}</div>
                                            <div class="row">Zip:{{this.zip}}</div>
                                        </div>
                                        {{/if}}
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="card-footer position-fixed">
                                                <input type="checkbox" class="form-check-input" id="found">
                                                <label class="form-check-label" for="found">Found</label>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>


        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card lg-12" style="max-width: 100%;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{this.img}}" class="card-img" alt="petPic">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        {{#each animal}}
                                        {{#unless lost}}
                                        <div class="row">Type:{{this.type}}</div>
                                        <div class="row">Name:{{this.name}}</div>
                                        <div class="row">Color:{{this.color}}</div>
                                        <div class="row">Size:{{this.size}}</div>
                                    </div>
                                    <div class="col-xs-8">
                                        <div class="row">Description:{{this.description}}</div>
                                        <div class="row">Found Near:{{this.lastSeen}}</div>
                                        <div class="row">Contact:{{this.contactInfo}}</div>
                                        <div class="row">Zip:{{this.zip}}</div>
                                        {{/unless}}
                                        {{/each}}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>




</body>